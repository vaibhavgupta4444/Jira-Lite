@model List<JiraLite.Application.Dtos.Issue.IssueResponseDto>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Dashboard - All Issues</h2>
    </div>
    
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-bold">Filter by Type</label>
                    <select id="filterType" class="form-select">
                        <option value="">All Types</option>
                        <option value="Bug">Bug</option>
                        <option value="Task">Task</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Filter by Priority</label>
                    <select id="filterPriority" class="form-select">
                        <option value="">All Priorities</option>
                        <option value="High">High</option>
                        <option value="Medium">Medium</option>
                        <option value="Low">Low</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Filter by Status</label>
                    <select id="filterStatus" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Open">Open</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Closed">Closed</option>
                        <option value="Reopened">Reopened</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Search</label>
                    <input type="text" id="searchText" class="form-control" placeholder="Search by title...">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <button id="clearFilters" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No issues found. Create your first issue using the button below!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover" id="issuesTable">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Created By</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var issue in Model)
                    {
                        <tr data-type="@issue.Type" data-priority="@issue.Priority" data-status="@issue.Status" data-title="@issue.Title.ToLower()">
                            <td>
                                <a asp-controller="Issues" asp-action="Details" asp-route-id="@issue.Id">@issue.Title</a>
                            </td>
                            <td>
                                @if (issue.Type == JiraLite.Domain.Enums.IssueType.Bug)
                                {
                                    <span class="badge bg-danger">Bug</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Task</span>
                                }
                            </td>
                            <td>
                                @switch (issue.Priority)
                                {
                                    case JiraLite.Domain.Enums.Priority.High:
                                        <span class="badge bg-danger">High</span>
                                        break;
                                    case JiraLite.Domain.Enums.Priority.Medium:
                                        <span class="badge bg-warning">Medium</span>
                                        break;
                                    case JiraLite.Domain.Enums.Priority.Low:
                                        <span class="badge bg-secondary">Low</span>
                                        break;
                                }
                            </td>
                            <td>
                                @switch (issue.Status)
                                {
                                    case JiraLite.Domain.Enums.IssueStatus.Open:
                                        <span class="badge bg-primary">Open</span>
                                        break;
                                    case JiraLite.Domain.Enums.IssueStatus.InProgress:
                                        <span class="badge bg-warning text-dark">In Progress</span>
                                        break;
                                    case JiraLite.Domain.Enums.IssueStatus.Closed:
                                        <span class="badge bg-success">Closed</span>
                                        break;
                                    case JiraLite.Domain.Enums.IssueStatus.Reopened:
                                        <span class="badge bg-info">Reopened</span>
                                        break;
                                }
                            </td>
                            <td>@issue.CreatedBy</td>
                            <td>@issue.Created.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td>
                                <a asp-controller="Issues" asp-action="Details" asp-route-id="@issue.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-controller="Issues" asp-action="Edit" asp-route-id="@issue.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="fixed-bottom p-3" style="left: auto; width: auto;">
        <button type="button" class="btn btn-primary btn-lg rounded-circle shadow" 
                data-bs-toggle="modal" data-bs-target="#createIssueModal" 
                style="width: 60px; height: 60px;">
            <i class="bi bi-plus-lg"></i>
        </button>
    </div>
</div>

<!-- Create Issue Modal -->
<div class="modal fade" id="createIssueModal" tabindex="-1" aria-labelledby="createIssueModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="createIssueModalLabel">
                    <i class="bi bi-plus-circle"></i> Create New Issue
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createIssueForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="issueTitle" class="form-label fw-bold">Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="issueTitle" required placeholder="Enter issue title">
                        <div class="invalid-feedback">Title is required (max 200 characters)</div>
                    </div>

                    <div class="mb-3">
                        <label for="issueDescription" class="form-label fw-bold">Description <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="issueDescription" rows="4" required placeholder="Describe the issue in detail"></textarea>
                        <div class="invalid-feedback">Description is required (max 2000 characters)</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="issueType" class="form-label fw-bold">Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="issueType" required>
                                <option value="">-- Select Type --</option>
                                <option value="0">Bug</option>
                                <option value="1">Task</option>
                            </select>
                            <div class="invalid-feedback">Type is required</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="issuePriority" class="form-label fw-bold">Priority <span class="text-danger">*</span></label>
                            <select class="form-select" id="issuePriority" required>
                                <option value="">-- Select Priority --</option>
                                <option value="0">High</option>
                                <option value="1">Medium</option>
                                <option value="2">Low</option>
                            </select>
                            <div class="invalid-feedback">Priority is required</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Issue
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <script>
        $(document).ready(function() {
            // Check if user is logged in
            var token = localStorage.getItem('token');
            
            if (!token) {
                // Redirect to login if no token
                window.location.href = '/Account/Login';
                return;
            }

            // Filter functionality
            function filterIssues() {
                var typeFilter = $('#filterType').val().toLowerCase();
                var priorityFilter = $('#filterPriority').val().toLowerCase();
                var statusFilter = $('#filterStatus').val().toLowerCase();
                var searchText = $('#searchText').val().toLowerCase();

                $('#issuesTable tbody tr').each(function() {
                    var row = $(this);
                    var type = row.data('type').toString().toLowerCase();
                    var priority = row.data('priority').toString().toLowerCase();
                    var status = row.data('status').toString().toLowerCase();
                    var title = row.data('title').toString().toLowerCase();

                    var showRow = true;

                    if (typeFilter && type !== typeFilter) {
                        showRow = false;
                    }
                    if (priorityFilter && priority !== priorityFilter) {
                        showRow = false;
                    }
                    if (statusFilter && status !== statusFilter) {
                        showRow = false;
                    }
                    if (searchText && title.indexOf(searchText) === -1) {
                        showRow = false;
                    }

                    if (showRow) {
                        row.show();
                    } else {
                        row.hide();
                    }
                });
            }

            // Attach filter events
            $('#filterType, #filterPriority, #filterStatus').on('change', filterIssues);
            $('#searchText').on('keyup', filterIssues);

            // Clear filters
            $('#clearFilters').on('click', function() {
                $('#filterType').val('');
                $('#filterPriority').val('');
                $('#filterStatus').val('');
                $('#searchText').val('');
                filterIssues();
            });

            // Create issue form submission
            $('#createIssueForm').on('submit', function(e) {
                e.preventDefault();

                var form = $(this)[0];
                if (!form.checkValidity()) {
                    e.stopPropagation();
                    form.classList.add('was-validated');
                    return;
                }

                var issueData = {
                    title: $('#issueTitle').val(),
                    description: $('#issueDescription').val(),
                    type: parseInt($('#issueType').val()),
                    priority: parseInt($('#issuePriority').val())
                };

                var token = localStorage.getItem('token');

                $.ajax({
                    url: '/api/issues',
                    type: 'POST',
                    contentType: 'application/json',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    },
                    data: JSON.stringify(issueData),
                    success: function(response) {
                        $('#createIssueModal').modal('hide');
                        location.reload();
                    },
                    error: function(xhr) {
                        console.error('Error creating issue: ' + (xhr.responseJSON?.message || 'Unknown error'));
                    }
                });
            });

            // Reset form when modal is closed
            $('#createIssueModal').on('hidden.bs.modal', function () {
                $('#createIssueForm')[0].reset();
                $('#createIssueForm').removeClass('was-validated');
            });
        });
    </script>
}
