<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - JiraLite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/JiraLite.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">JiraLite</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item" id="homeLink">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item" id="dashboardLink" style="display: none;">
                        <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item" id="workflowLink" style="display: none;">
                        <a class="nav-link text-dark" asp-controller="Workflow" asp-action="Index">Workflow Config</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item" id="logoutLink" style="display: none;">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                    <li class="nav-item" id="loginLink">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item" id="registerLink">
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2026 - JiraLite
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    $(document).ready(function() {
        var token = localStorage.getItem('token');
        var userName = localStorage.getItem('userName');
        var userRole = localStorage.getItem('userRole');
        
        if (token) {
            $('#dashboardLink').show();
            $('#userNameNav').show();
            $('#navUserName').text(userName || 'User');
            $('#logoutLink').show();
            $('#loginLink').hide();
            $('#registerLink').hide();
            $('#homeLink').hide();
            
            // Show workflow link only for Admin users
            if (userRole === 'Admin') {
                $('#workflowLink').show();
            }
        } else {
          
            $('#dashboardLink').hide();
            $('#userNameNav').hide();
            $('#logoutLink').hide();
            $('#loginLink').show();
            $('#registerLink').show();
            $('#homeLink').show();
            $('#workflowLink').hide();
        }
    });
</script>
