@{
    ViewData["Title"] = "JiraLite - Modern Issue Tracking";
}

<div class="bg-primary text-white py-5 rounded-3 my-4">
    <div class="container text-center py-5">
        <h1 class="display-3 fw-bold mb-3">JiraLite</h1>
        <p class="lead mb-4">Streamline your workflow with modern issue tracking</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-4 gap-3">Get Started</a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg px-4">Sign In</a>
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center fw-bold mb-5">Key Features</h2>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="fs-1 mb-3">📋</div>
                    <h5 class="card-title fw-bold">Issue Tracking</h5>
                    <p class="card-text text-muted">Create, manage, and track issues efficiently</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="fs-1 mb-3">⚡</div>
                    <h5 class="card-title fw-bold">Fast & Responsive</h5>
                    <p class="card-text text-muted">Lightning-fast performance on all devices</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="fs-1 mb-3">🔒</div>
                    <h5 class="card-title fw-bold">Secure</h5>
                    <p class="card-text text-muted">JWT-based authentication keeps data safe</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container text-center my-5 py-5">
    <h3 class="fw-bold mb-3">Ready to get started?</h3>
    <p class="text-muted mb-4">Join teams using JiraLite today</p>
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-5">Create Account</a>
    <p class="mt-3 text-muted small">
        Already have an account? 
        <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-semibold">Sign in</a>
    </p>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Redirect logged-in users to dashboard
            var token = localStorage.getItem('token');
            if (token) {
                window.location.href = '/Dashboard/Index';
            }
        });
    </script>
}