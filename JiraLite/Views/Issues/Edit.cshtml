@model JiraLite.Application.Dtos.Issue.UpdateIssueDto

@{
    ViewData["Title"] = "Edit Issue";
    var issueId = ViewBag.IssueId as Guid?;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0"><i class="bi bi-pencil"></i> Edit Issue</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@issueId" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter issue title"/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5"
                                      placeholder="Describe the issue in detail"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Type" class="form-label fw-bold">Type</label>
                                <select asp-for="Type" class="form-select"
                                        asp-items="Html.GetEnumSelectList<JiraLite.Domain.Enums.IssueType>()">
                                    <option value="">-- Select Type --</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Priority" class="form-label fw-bold">Priority</label>
                                <select asp-for="Priority" class="form-select"
                                        asp-items="Html.GetEnumSelectList<JiraLite.Domain.Enums.Priority>()">
                                    <option value="">-- Select Priority --</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-id="@issueId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Details
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Update Issue
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script>
        $(document).ready(function() {
            var token = localStorage.getItem('token');
            if (!token) {
                window.location.href = '/Account/Login';
            }
        });
    </script>
}