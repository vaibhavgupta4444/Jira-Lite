@{
    ViewData["Title"] = "Bulk Upload Issues";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Bulk Upload Issues from Excel</h2>
            <hr />

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Excel Format Requirements</h5>
                    <p class="card-text">Your Excel file should have the following columns:</p>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Column</th>
                                <th>Description</th>
                                <th>Valid Values</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>Title</strong></td>
                                <td>Issue title (required)</td>
                                <td>Any text</td>
                            </tr>
                            <tr>
                                <td><strong>Description</strong></td>
                                <td>Issue description (required)</td>
                                <td>Any text</td>
                            </tr>
                            <tr>
                                <td><strong>Type</strong></td>
                                <td>Issue type (required)</td>
                                <td>Task, Bug, Feature, Improvement</td>
                            </tr>
                            <tr>
                                <td><strong>Priority</strong></td>
                                <td>Issue priority (required)</td>
                                <td>Low, Medium, High, Critical</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <form id="uploadForm">
                        <div class="mb-3">
                            <label for="excelFile" class="form-label">Select Excel File</label>
                            <input type="file" class="form-control" id="excelFile" accept=".xlsx,.xls" required>
                            <div class="form-text">Accepted formats: .xlsx, .xls</div>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Upload and Create Issues
                        </button>
                    </form>
                </div>
            </div>

            <div id="progressSection" class="mt-3" style="display: none;">
                <div class="alert alert-info">
                    <div class="spinner-border spinner-border-sm me-2" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    Processing Excel file...
                </div>
            </div>

            <div id="resultSection" class="mt-3" style="display: none;">
                <div class="card">
                    <div class="card-header">
                        <h5>Upload Results</h5>
                    </div>
                    <div class="card-body">
                        <div id="summarySection"></div>
                        
                        <div id="successSection" class="mt-3" style="display: none;">
                            <h6 class="text-success">Successfully Created Issues</h6>
                            <div class="list-group" id="successList"></div>
                        </div>
                        
                        <div id="errorSection" class="mt-3" style="display: none;">
                            <h6 class="text-danger">Failed Rows</h6>
                            <div class="list-group" id="errorList"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#uploadForm').on('submit', function(e) {
                e.preventDefault();
                
                var file = $('#excelFile')[0].files[0];
                
                if (!file) {
                    console.error('Please select a file');
                    return;
                }

                var token = localStorage.getItem('token');
                
                if (!token) {
                    console.error('Authentication token not found. Please login again.');
                    window.location.href = '/Account/Login';
                    return;
                }

                $('#progressSection').show();
                $('#resultSection').hide();

                var formData = new FormData();
                formData.append('file', file);

                $.ajax({
                    url: '/api/issues/upload-excel',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    headers: {
                        'Authorization': 'Bearer ' + token
                    },
                    success: function(result) {
                        $('#progressSection').hide();
                        
                        if (result.success) {
                            displayResults(result.data);
                        } else {
                            console.error('Error: ' + (result.message || 'Upload failed'));
                        }
                    },
                    error: function(xhr, status, error) {
                        $('#progressSection').hide();
                        
                        if (xhr.status === 401) {
                            console.error('Authentication failed. Please login again.');
                            window.location.href = '/Account/Login';
                        } else {
                            var errorMessage = xhr.responseJSON?.message || error || 'Upload failed';
                            console.error('Error: ' + errorMessage);
                        }
                    }
                });
            });

            function displayResults(data) {
                $('#resultSection').show();

                // Display summary
                var summaryHtml = `
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="p-3 border rounded">
                                <h3 class="text-primary">${data.totalRows}</h3>
                                <p class="mb-0">Total Rows</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 border rounded">
                                <h3 class="text-success">${data.successCount}</h3>
                                <p class="mb-0">Created</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 border rounded">
                                <h3 class="text-danger">${data.failedCount}</h3>
                                <p class="mb-0">Failed</p>
                            </div>
                        </div>
                    </div>
                `;
                $('#summarySection').html(summaryHtml);

                // Display successful issues
                if (data.createdIssues && data.createdIssues.length > 0) {
                    $('#successSection').show();
                    var successHtml = $.map(data.createdIssues, function(issue) {
                        return `
                            <a href="/Issues/Details/${issue.id}" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">${issue.title}</h6>
                                    <small class="badge bg-success">Created</small>
                                </div>
                                <p class="mb-1 text-truncate">${issue.description}</p>
                                <small>Type: ${getTypeName(issue.type)} | Priority: ${getPriorityName(issue.priority)}</small>
                            </a>
                        `;
                    }).join('');
                    $('#successList').html(successHtml);
                }

                if (data.errors && data.errors.length > 0) {
                    $('#errorSection').show();
                    var errorHtml = $.map(data.errors, function(error) {
                        var errorItems = $.map(error.validationErrors, function(err) {
                            return '<li>' + err + '</li>';
                        }).join('');
                        
                        return `
                            <div class="list-group-item list-group-item-danger">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">${error.title}</h6>
                                    <small>Row ${error.rowNumber}</small>
                                </div>
                                <ul class="mb-0 mt-2">
                                    ${errorItems}
                                </ul>
                            </div>
                        `;
                    }).join('');
                    $('#errorList').html(errorHtml);
                }
            }

            function getTypeName(type) {
                var types = { 0: 'Task', 1: 'Bug', 2: 'Feature', 3: 'Improvement' };
                return types[type] || 'Unknown';
            }

            function getPriorityName(priority) {
                var priorities = { 0: 'Low', 1: 'Medium', 2: 'High', 3: 'Critical' };
                return priorities[priority] || 'Unknown';
            }
        });
    </script>
}
